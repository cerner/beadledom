<!DOCTYPE html>
<html>
<head>
    <title>Diagnostic Health Check</title>
    {{> style}}
</head>
<body>


<h1 class="{{statusClass}}">
    {{message}}
</h1>

<table>
    <thead>
    <tr>
        <td>Dependency</td>
        <td>Status</td>
    </tr>
    </thead>
    <tbody>
    {{#dependencies}}
        <tr class="{{statusClass}}">
            <td><a href="{{link}}">{{name}}</a></td>
            <td>{{statusText}}</td>
        </tr>
    {{/dependencies}}
    </tbody>
</table>

<dl>
  {{#serverInfo}}
    <dt>Host Name</dt>
    <dd>{{hostName}}</dd>

    <dt>Startup Time</dt>
    <dd>{{startupDateTime}}</dd>
  {{/serverInfo}}
  {{#buildInfo}}
    <dt>Version</dt>
    <dd>{{version}}</dd>
    <dt>SCM Version</dt>
    <dd>{{scmRevision}}</dd>
  {{/buildInfo}}
</dl>

</body>
</html>
